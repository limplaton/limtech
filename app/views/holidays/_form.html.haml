= form_for @holiday do |f|
  .field.form-group
    %label.control-label.col-sm-2{:for => "name"}= f.label :name
    .col-sm-10.form-group
      = f.text_field :name, :class => "form-control"
    %div{:class => "color: red"}
      - if @holiday.errors.include? (:name)
        - @holiday.errors.full_messages_for(:name).each do |error_message|
          = error_message
          \
  .field.form-group
    %label.control-label.col-sm-2{:for => "date"}= f.label :date
    .col-sm-10.form-group
      = f.date_field :date, :class => "form-control"
    %div{:class => "color: red"}
      - if @holiday.errors.include? (:date)
        - @holiday.errors.full_messages_for(:date).each do |error_message|
          = error_message
          \
  .form-group
    .col-sm-offset-2.col-sm-10.py-2
      %input.btn.btn-success.btn-sm{:type => "submit", :value => "Save"}/
